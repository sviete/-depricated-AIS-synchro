<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_settings"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:id="@+id/general_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <ImageView
                android:id="@+id/general_Settings_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:tint="?attr/iconTint"
                android:src="@drawable/ic_settings"
                android:contentDescription="@string/general_settings_icon_content_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/general_Settings_icon"
                android:paddingStart="32dp"
                android:paddingEnd="0dp"
                android:textColor="?attr/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/settings_header_general"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerColor"/>

        <RelativeLayout
            android:id="@+id/look_and_feel_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <ImageView
                android:id="@+id/look_and_feel_settings_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:tint="?attr/iconTint"
                android:src="@drawable/ic_look_and_feel"
                android:contentDescription="@string/look_and_feel_settings_icon_content_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/look_and_feel_settings_icon"
                android:paddingStart="32dp"
                android:paddingEnd="0dp"
                android:textColor="?attr/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/look_and_feel"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerColor"/>

        <RelativeLayout
            android:id="@+id/notification_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <ImageView
                android:id="@+id/notification_settings_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:tint="?attr/iconTint"
                android:src="@drawable/ic_notifications"
                android:contentDescription="@string/notification_settings_icon_content_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/notification_settings_icon"
                android:paddingStart="32dp"
                android:paddingEnd="0dp"
                android:textColor="?attr/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/notifications_pref_title"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerColor"/>

        <RelativeLayout
            android:id="@+id/logging_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground" >

            <ImageView
                android:id="@+id/logging_settings_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:tint="?attr/iconTint"
                android:src="@drawable/ic_file_alert"
                android:contentDescription="@string/logging_settings_icon_content_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/logging_settings_icon"
                android:paddingStart="32dp"
                android:paddingEnd="0dp"
                android:textColor="?attr/textColorPrimary"
                android:textStyle="bold"
                android:text="@string/logging_settings_header"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/dividerColor"/>

    </LinearLayout>
</ScrollView>